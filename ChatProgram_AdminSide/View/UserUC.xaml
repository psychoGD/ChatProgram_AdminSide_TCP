<UserControl x:Class="ChatProgram_AdminSide.UserUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatProgram_AdminSide"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800" Width="50">
    <Grid>
        <StackPanel Orientation="Horizontal" Background="White">
            <!--<Image Sour></Image>-->
            <Label FontSize="20" Content="{Binding user.Username}" 
                   Foreground="{Binding BackGroundColor,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></Label>
            
        </StackPanel>
    </Grid>
</UserControl>
